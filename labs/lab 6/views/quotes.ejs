<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>    
    <title>Quote Finder</title>
    <style>
        img {
            width: 25%;
        }
    </style>
</head>
<body class="text-center">
    <h1 class="bg-danger p-4 text-center text-white">Quote Finder</h1>

    <br>

    <h2>Quotes Found</h2>

    <% if (rows.length > 0) { %>
        <% rows.forEach(row => { %>
            <i><%= row.quote %></i> <br>
            -<a href="#" authorId="<%= row.authorId %>"><%= row.firstName %> <%= row.lastName %></a><br><br>
        <% }); %>
    <% } else { %>
        <p>No quotes found.</p>
    <% } %>

    <!-- Modal -->
    <div class="modal fade" id="authorModal" tabindex="-1" aria-labelledby="authorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="authorName"></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="authorInfo">
                        <h3></h3>
                        <img id="authorPic" alt="Author Portrait">
                        <h5 id="dob"></h5>
                        <p id="bio"></p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const authorLinks = document.querySelectorAll("a[authorId]");
        authorLinks.forEach(authorLink => {
            authorLink.addEventListener("click", displayAuthorInfo);
        });

        async function displayAuthorInfo() {
            const authorId = this.getAttribute("authorId");
            const url = `/api/authors/${authorId}`;
            try {
                const response = await fetch(url);
                const data = await response.json();
                if (data.length > 0) {
                    document.querySelector("#authorName").textContent = `${data[0].firstName} ${data[0].lastName}`;
                    document.querySelector("#authorPic").src = data[0].portrait;
                    document.querySelector("#authorPic").alt = `${data[0].firstName} ${data[0].lastName}'s portrait`;
                    document.querySelector("#dob").textContent = `Date of Birth: ${data[0].dob}`;
                    document.querySelector("#bio").textContent = data[0].biography;

                    const myModal = new bootstrap.Modal(document.getElementById('authorModal'));
                    myModal.show();
                } else {
                    console.error("No author data found.");
                }
            } catch (error) {
                console.error("Error fetching author data:", error);
            }
        }
    </script>
</body>
</html>