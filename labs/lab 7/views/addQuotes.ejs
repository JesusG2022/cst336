<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/style.css"> <!-- Corrected path -->
   <title>Add Quote</title>
</head>
<body>
    <h1>Add a New Quote</h1>
    <%- include('partial/nav') %>
    <section>
    <% if (message) { %>
        <p style="color: green;"><%= message %></p>
    <% } %>
    <form action="/addQuote" method="POST">
        <label for="quote">Quote:</label>
        <textarea id="quote" name="quote" required></textarea>
        <br>

        <label for="authorId">Author:</label>
        <select id="authorId" name="authorId" required>
            <% authors.forEach(author => { %>
                <option value="<%= author.authorId %>"><%= author.firstName %> <%= author.lastName %></option>
            <% }); %>
        </select>
        <br>

        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <% categories.forEach(category => { %>
                <option value="<%= category %>"><%= category %></option>
            <% }); %>
        </select>
        <br>

        <label for="likes">Likes:</label>
        <input type="number" id="likes" name="likes" value="0" required>
        <br>
        <br>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</section>
    <script src="/js/quote.js"></script>
</body>
</html>