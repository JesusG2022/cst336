<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> 
    <link rel="stylesheet" href="/style/style.css"> <!-- Corrected path -->
   <title>Authors</title>
</head>
<body>
    <h1>Authors</h1>
    <%- include('partial/nav') %>
    <section>
        <ul>
            <% rows.forEach(author => { %>
                
                <%= author.authorId %> - <%= author.firstName %> <%= author.lastName %>
                <form action="/deleteAuthor" method="POST" style="display:inline;">
                    <input type="hidden" name="authorId" value="<%= author.authorId %>">
                    <br>
                    <button type="submit" class="btn btn-danger btn">Delete</button>
                     <br>
                    <a href="/editAuthor?authorId=<%= author.authorId %>" class="btn btn-success">Update</a>
                    <br>
                    <br>
                </form>
            <% }); %>
        </ul>
</section>
    <script src="/js/author.js"></script>
</body>
</html>